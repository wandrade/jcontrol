<launch>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find jebediah_control)/config/jebediah_control.yaml" command="load"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/jebediah" args="servo_coxa_1_position_controller
                servo_femur_1_1_position_controller
                servo_femur_1_2_position_controller
                joint_state_controller"/>

    <!-- convert joint states to Tf transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/jebediah/joint_states" />
    </node>

    <!-- load the controller's node-->
    <node name="controller" pkg="jcontrol" type="controller.py" respawn="false"
    output="screen" args=""/>
</launch>